{
    "name": "Skynet",
    "version": "2.1.7",
    "description": "西瓜加速 For Windows",
    "main": "src/main/main.js",
    "repository": "",
    "author": "",
    "license": "Apache-2.0",
    "build": {
		"electronVersion": "11.0.0",
        "productName": "西瓜加速",
        "extraResources": [
            {
                "from": "../libs/${env.target}",
                "to": "./extra"
            },
            {
                "from": "../libs/elevate.exe",
                "to": "./"
            }
        ],
        "dmg": {
            "background": "../build/dmg-background.tiff",
            "contents": [
                {
                    "x": 440,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 160,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "target": "dmg",
            "x64ArchFiles": "*",
            "artifactName": "${productName}_setup_${version}.${ext}",
            "icon": "../res/icon.icns"
        },
        "win": {
            "icon": "../res/icon.ico",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "bluebird": "^3.7.2",
        "child_process": "^1.0.2",
        "default-gateway": "^6.0.0",
        "electron-notarize": "^1.2.1",
        "electron-updater": "^5.2.1",
        "fs-extra": "^10.1.0",
        "http": "0.0.1-security",
        "js-yaml": "^4.0.0",
        "path": "^0.12.7",
        "ping": "^0.2.3",
        "request": "^2.88.2",
        "sudo-prompt": "^9.2.1",
        "tcp-ping": "^0.1.1",
        "tracer": "^1.1.6"
    },
    "devDependencies": {
        "electron": "^11.0.0",
        "electron-builder": "^24.12.0"
    }
}